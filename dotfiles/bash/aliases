# Dir management
alias ls='ls --color=auto'
alias l="ls -laGh"
alias ..="cd .."
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -I'   # 'rm -i' prompts for every file
alias ln='ln -i'
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'
alias grep='grep --color=auto'

# Git
alias g="git status"
alias gb="git branch"
alias gba="git branch -a"
alias ga="git add "
alias gh="git log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short"
alias go="git checkout "

# Programs
alias yiic='/home/justb/www/yii-1.1.10/framework/yiic'
alias von='sudo vbetool dpms on'
alias voff='sudo vbetool dpms off'
alias mysqls='sudo /etc/rc.d/mysqld' #mysqls start/stop/restart starts/stops/restarts mysql
alias apache='sudo service apache2' #apache start/stop/restart starts/stops/restarts apache
alias memcheck='valgrind --tool=memcheck'
alias samsung='xrandr --output VGA-0 --auto --left-of LVDS'
